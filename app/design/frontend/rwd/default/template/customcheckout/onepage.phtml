<?php /* get configs */ ?>
<?php $isCustomEnabled = Mage::getStoreConfig('icube/option/customcheckout_enabled',Mage::app()->getStore()); ?>
<?php $isSkipBill = Mage::getStoreConfig('icube/option/customcheckout_skipbilling',Mage::app()->getStore()); ?>
<?php $isSkipMethod = Mage::getStoreConfig('icube/option/customcheckout_skishippingmethod',Mage::app()->getStore()); ?>
<?php $isSkipReview = Mage::getStoreConfig('icube/option/customcheckout_skipreview',Mage::app()->getStore()); ?>
<?php $labels = array(); ?>
<?php $labels['login'] = Mage::getStoreConfig('icube/option/login_label',Mage::app()->getStore()); ?>
<?php $labels['billing'] = Mage::getStoreConfig('icube/option/billing_label',Mage::app()->getStore()); ?>
<?php $labels['shipping'] = Mage::getStoreConfig('icube/option/shipping_label',Mage::app()->getStore()); ?>
<?php $labels['shipping_method'] = Mage::getStoreConfig('icube/option/method_label',Mage::app()->getStore()); ?>
<?php $labels['payment'] = Mage::getStoreConfig('icube/option/payment_label',Mage::app()->getStore()); ?>
<?php $labels['review'] = Mage::getStoreConfig('icube/option/review_label',Mage::app()->getStore()); ?>
<div class="page-title">
    <h1><?php echo $this->__('Checkout') ?></h1>
</div>
<script type="text/javascript" src="<?php echo $this->getJsUrl('varien/accordion.js') ?>"></script>
<script type="text/javascript" src="<?php echo $this->getSkinUrl('js/opcheckout.js') ?>"></script>
<script type="text/javascript" src="<?php echo $this->getSkinUrl('js/opcheckout_rwd.js') ?>"></script>
<?php /* check whether skip billing */ ?>
<?php if( $isCustomEnabled && $isSkipBill ) :?>
<script type="text/javascript" src="<?php echo $this->getSkinUrl('js/customcheckout_skipbilling.js') ?>"></script>
<script type="text/javascript">
//<![CDATA[
jQuery(document).ready(function(){
	billing.beforeSkipBilling();
});
//]]>
</script>
<?php endif; ?>
<?php /* check whether skip shipping method */ ?>
<?php if( $isCustomEnabled && $isSkipMethod ) :?>
<script type="text/javascript" src="<?php echo $this->getSkinUrl('js/customcheckout_skipmethod.js') ?>"></script>
<script type="text/javascript">
//<![CDATA[
jQuery(document).ready(function(){
	shippingMethod.beforeSkipMethod();
});
//]]>
</script>
<?php endif; ?>

<?php /* check whether skip review */ ?>
<?php if( $isCustomEnabled && $isSkipReview ) :?>
<script type="text/javascript">
//<![CDATA[
jQuery(document).ready(function(){
	document.getElementById('checkout-step-review').style.display = 'none';
	document.getElementById('opc-review').style.display = 'none';
	jQuery('#payment-buttons-container .back-link').css('display','none');
	jQuery('#payment-buttons-container .button span span').text('Place Order');
});
//]]>
</script>
<?php endif; ?>

<ol class="opc opc-firststep-<?php echo $this->getActiveStep() ?>" id="checkoutSteps">
<?php $i=0; foreach($this->getSteps() as $_stepId => $_stepInfo): ?>
<?php if (!$this->getChild($_stepId) || !$this->getChild($_stepId)->isShow()): continue; endif; $i++; ?>
    <li id="opc-<?php echo $_stepId ?>" class="section<?php echo !empty($_stepInfo['allow'])?' allow':'' ?><?php echo !empty($_stepInfo['complete'])?' saved':'' ?>">
        <div class="step-title">
            <span class="number">
            <?php /* check whether skip billing OR skipp shipping method and decrease the number */?>
            <?php if( ($isCustomEnabled && $isSkipBill && $_stepId == 'billing') || ($isCustomEnabled && $isSkipMethod && $_stepId == 'shipping_method')) : ?>
            <?php $i--;?><?php endif; ?><?php echo $i ?></span>
            <?php /* get the label from config */?>
            <h2><?php if($labels[$_stepId]): echo $labels[$_stepId]; ?><?php else : ?><?php echo $_stepInfo['label'] ?><?php endif; ?></h2>
            <a href="#"><?php echo $this->__('Edit') ?></a>
        </div>
        <div id="checkout-step-<?php echo $_stepId ?>" class="step a-item" style="display:none;">
            <?php echo $this->getChildHtml($_stepId) ?>
        </div>
    </li>
<?php endforeach ?>
</ol>
<script type="text/javascript">
//<![CDATA[
    var accordion = new Accordion('checkoutSteps', '.step-title', true);
    <?php if($this->getActiveStep()): ?>
    accordion.openSection('opc-<?php echo $this->getActiveStep() ?>');
    <?php endif ?>
    var checkout = new Checkout(accordion,{
        progress: '<?php echo $this->getUrl('checkout/onepage/progress') ?>',
        review: '<?php echo $this->getUrl('checkout/onepage/review') ?>',
        saveMethod: '<?php echo $this->getUrl('checkout/onepage/saveMethod') ?>',
        failure: '<?php echo $this->getUrl('checkout/cart') ?>'}
    );
//]]>
</script>