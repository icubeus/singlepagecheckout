<?xml version="1.0"?>

<layout version="0.1.0">
    <default>
        <reference name="top.links">
            <block type="singlepagecheckout/link" name="singlepage_checkout_link">
                <action method="addSinglepageCheckoutLink"></action>
            </block>
        </reference>
    </default>

    <checkout_cart_index>
        <reference name="checkout.cart.methods">
            <block
                    type="singlepagecheckout/link"
                    name="checkout.cart.methods.singlepage"
                    template="icube/singlepagecheckout/link.phtml" />
        </reference>
    </checkout_cart_index>


    <checkout_singlepage_index translate="label">
        <label>Single Page Checkout</label>
        <!-- Mage_Checkout -->
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/icube/singlepagecheckout/singlepage.css</name>
                <params/>
            </action>
        </reference>
        <reference name="content">
            <block
                    type="singlepagecheckout/singlepage"
                    name="checkout.singlepage"
                    template="icube/singlepagecheckout/singlepage.phtml">
                <block
                        type="singlepagecheckout/singlepage_login"
                        name="checkout.singlepage.login" as="login"
                        template="icube/singlepagecheckout/login.phtml">
                </block>
                <block
                        type="singlepagecheckout/singlepage_shipping"
                        name="checkout.singlepage.shipping" as="shipping"
                        template="icube/singlepagecheckout/shipping.phtml"/>
                <block
                        type="singlepagecheckout/singlepage_shipping_method"
                        name="checkout.singlepage.shipping_method"
                        as="shipping_method"
                        template="icube/singlepagecheckout/shipping_method.phtml">
                    <block
                            type="checkout/onepage_shipping_method_available"
                            name="checkout.onepage.shipping_method.available"
                            as="available"
                            template="icube/singlepagecheckout/shipping_method/available.phtml"/>
                    <block
                            type="checkout/onepage_shipping_method_additional"
                            name="checkout.onepage.shipping_method.additional"
                            as="additional"
                            template="checkout/onepage/shipping_method/additional.phtml"/>
                </block>
                <block
                        type="singlepagecheckout/singlepage_payment"
                        name="checkout.singlepage.payment"
                        as="payment"
                        template="icube/singlepagecheckout/payment.phtml">
                    <block
                            type="checkout/onepage_payment_methods"
                            name="checkout.payment.methods"
                            as="methods"
                            template="icube/singlepagecheckout/payment/methods.phtml">
                        <action method="setMethodFormTemplate">
                            <method>purchaseorder</method>
                            <template>payment/form/purchaseorder.phtml</template>
                        </action>
                    </block>
                    <block
                        type="singlepagecheckout/singlepage_billing"
                        name="checkout.singlepage.billing" as="billing"
                        template="icube/singlepagecheckout/billing.phtml"/>
                </block>
                <block
                        type="singlepagecheckout/singlepage_review"
                        name="checkout.singlepage.review"
                        as="review"
                        template="icube/singlepagecheckout/review.phtml">
                    <block
                            type="core/template"
                            name="checkout.singlepage.review.button"
                            as="button"
                            template="icube/singlepagecheckout/review/button.phtml"/>
                    <block
                            type="checkout/agreements"
                            name="checkout.singlepage.agreements"
                            as="agreements"
                            template="checkout/onepage/agreements.phtml"/>
                </block>
            </block>
        </reference>
    </checkout_singlepage_index>

    <!-- defining handle for an ajax shipping method update -->
    <checkout_singlestep_shippingmethod>
        <!-- Mage_Checkout -->
        <remove name="right"/>
        <remove name="left"/>
        <block
                type="checkout/onepage_shipping_method_available"
                name="checkout.shipping.methods"
                output="toHtml"
                template="icube/singlepagecheckout/shipping_method/available.phtml"/>
    </checkout_singlestep_shippingmethod>

    <!-- defining handle for an ajax payment method update -->
    <checkout_singlestep_paymentmethod>
        <remove name="right"/>
        <remove name="left"/>

        <block
                type="checkout/onepage_payment_methods"
                name="checkout.payment.methods"
                output="toHtml"
                template="icube/singlepagecheckout/payment/methods.phtml">
            <action method="setMethodFormTemplate">
                <method>purchaseorder</method>
                <template>payment/form/purchaseorder.phtml</template>
            </action>
        </block>
    </checkout_singlestep_paymentmethod>


    <checkout_singlestep_review translate="label">
        <label>One Step Checkout Overview</label>
        <!-- Mage_Checkout -->
        <remove name="right"/>
        <remove name="left"/>

        <block
                type="checkout/onepage_review_info"
                name="checkout.review"
                output="toHtml"
                template="icube/singlepagecheckout/review/info.phtml">
            <action method="addItemRender">
                <type>default</type>
                <block>checkout/cart_item_renderer</block>
                <template>checkout/onepage/review/item.phtml</template>
            </action>
            <action method="addItemRender">
                <type>grouped</type>
                <block>checkout/cart_item_renderer_grouped</block>
                <template>checkout/onepage/review/item.phtml</template>
            </action>
            <action method="addItemRender">
                <type>configurable</type>
                <block>checkout/cart_item_renderer_configurable</block>
                <template>checkout/onepage/review/item.phtml</template>
            </action>
            <block
                    type="checkout/cart_totals"
                    name="checkout.singlepage.review.info.totals"
                    as="totals"
                    template="checkout/onepage/review/totals.phtml"/>
            <block
                    type="core/text_list"
                    name="checkout.onepage.review.info.items.before"
                    as="items_before"
                    translate="label">
                <label>Items Before</label>
            </block>
            <block
                    type="core/text_list"
                    name="checkout.singlepage.review.info.items.after"
                    as="items_after"
                    translate="label">
                <label>Items After</label>
            </block>
        </block>
    </checkout_singlestep_review>

    <checkout_singlepage_success translate="label">
        <label>One Step Checkout Success</label>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="checkout/onepage_success" name="checkout.success" template="checkout/success.phtml"/>
        </reference>
    </checkout_singlepage_success>

</layout>